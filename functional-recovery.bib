	author = {Salem, Shady and Siam, Ahmad and El-Dakhakhni, Wael and Tait, Michael},
	urldate = {2020-12-15},
	date = {2020-11-01},
	note = {Publisher: American Society of Civil Engineers},
	keywords = {Functionality loss, Probabilistic resilience, Rapidity, Recovery time, Resilience surface, Risk management, Robustness},
	file = {Full Text PDF:/Users/jff/Zotero/storage/QIFDIP6Y/Salem et al. - 2020 - Probabilistic Resilience-Guided Infrastructure Ris.pdf:application/pdf},
}

