@article{linStochasticPostdisasterFunctionality2017,
	title = {Stochastic post-disaster functionality recovery of community building portfolios I: Modeling},
	volume = {69},
	issn = {0167-4730},
	url = {http://www.sciencedirect.com/science/article/pii/S0167473017300620},
