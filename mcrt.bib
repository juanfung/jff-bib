@article{kjellSemanticMeasuresUsing2019,
  title = {Semantic Measures: {{Using}} Natural Language Processing to Measure, Differentiate, and Describe Psychological Constructs},
  shorttitle = {Semantic Measures},
  author = {Kjell, Oscar N. E. and Kjell, Katarina and Garcia, Danilo and Sikström, Sverker},
