@article{elmqvistSustainabilityResilienceTransformation2019,
  title = {Sustainability and Resilience for Transformation in the Urban Century},
  author = {Elmqvist, Thomas and Andersson, Erik and Frantzeskaki, Niki and McPhearson, Timon and Olsson, Per and Gaffney, Owen and Takeuchi, Kazuhiko and Folke, Carl},
  date = {2019-04},
  journaltitle = {Nature Sustainability},
